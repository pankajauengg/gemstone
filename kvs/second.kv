<SecondWindow>:
    Button:
        text: 'Back'
        size_hint: None, None
        size: 150, 50
        on_release: root.manager.current = 'Rec'
    
    Button:
        text: 'Select'
        size_hint: None, None
        size: 100, 40
        on_release: root.btn_B1_clk()
        pos: 400,250
    

    Button:
        id: my
        text: 'selection/giphy.gif'
        pos:  300,300
        size: 200, 200
        size_hint: None, None
        on_release: 
            app.root.current = "Rec" 
            root.manager.transition.direction ="left"
        
        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'center'
            Image:
                id: SelGem
                source: my.text
                size_hint: None, None
                size: 200, 200
                pos:  300,300
    